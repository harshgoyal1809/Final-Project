@model Return_Order_Portal.Models.ProcessResponse

@{ ViewData["Title"] = "ProcessResponse"; }


<!DOCTYPE html>
<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color: black">
    <h2 style="font-family: 'sans-serif', cursive;  color: aqua; position: relative;">You are just one step away!</h2>
    <div class="container" style="margin:auto;margin-top:50px;position:relative;z-index:10">
        <h4 class="text-light">Confirm your order</h4><br />

        <div class="row">
            <div class="col-md-4">
                <table class="text-light">
                    <tr>
                        <td>@Html.Label("Request Id")</td>
                        <td></td>
                        <td>@Html.Display("RequestId")</td>
                    </tr>
                    <tr>
                        <td>@Html.Label("Processing Charge")</td>
                        <td></td>
                        <td>@Html.Display("ProcessingCharge")</td>
                    </tr>
                    <tr>
                        <td>@Html.Label("Packaging And Delivery Charge")</td>
                        <td></td>
                        <td>@Html.Display("PackagingAndDeliveryCharge")</td>
                    </tr>
                    <tr>
                        <td>@Html.Label("Date Of Delivery")</td>
                        <td></td>
                        <td>@Html.Display("DateOfDelivery")</td>
                    </tr>

                </table>

                <div class="btn btn-outline-success" style="color:blue"> <a asp-controller="User" asp-action="Confirmation">Confirm</a></div>
                <div class="btn btn-warning" style="color:blue"> <a asp-controller="User" asp-action="Logout">Log Out</a></div>
                
            </div>
            <div class="col-md-8 bg-image hover-overlay ripple">
                <img src="~/images/confirm.png" class="img-fluid rounded hover-shadow" />
                <a href="#!">
                    <div class="mask" style="background-color: black;"></div>
                </a>
            </div>
        </div>
    </div>



</body>
</html>
